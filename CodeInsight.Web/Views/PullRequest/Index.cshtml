@using System.Collections.Immutable
@using CodeInsight.Library
@using FuncSharp
@model PullRequestIndexViewModel

<div class="container">
    <div class="row">
        <h2>PR stats</h2>
        @* <p>@Model.Statistics.AverageDeletions</p> *@
        @* <p>@Model.Statistics.AverageAdditions</p> *@
        @* <p>@Model.Statistics.AverageLifeTime.Days</p> *@
        
        <div class="card-columns cols-1">
            <div class="card">
                <div class="card-body">
                    <canvas id="myChart" width="800" height="800"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    var stats = Model.Statistics;
    var dates = stats.Interval.DateInterval.ToImmutableList();
    var labels = dates.Select(d => $"\"{d.Day}.{d.Month}.\"");
    var values = dates.Select(d => stats.Get(d)
        .Map(s => s.AverageLifeTime.Hours.ToString())
        .GetOrElse("NaN")
    );
}

@section Scripts {
    <script>
        var ctx = document.getElementById("myChart").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(',', labels))],
                datasets: [{
                    data: [@string.Join(',', values)],
                    fill: false,
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}

