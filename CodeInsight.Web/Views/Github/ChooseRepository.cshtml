@{
    Layout = "_AnonymousLayout";
}

@model CodeInsight.Web.Models.Github.ChooseRepositoryViewModel

<div class="container align-items-center justify-content-center" style="height: 100vh; padding-top: 20%">
    @{
        if (Model.Error.NonEmpty)
        {
            <div class="alert alert-danger" role="alert">
                @Model.Error.Get()
            </div>
        }
    }

    <form asp-controller="Github" asp-action="ChooseRepository" method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg text-white" for="nameWithOwner">Choose repository</label>
            <select class="form-control form-control-lg col-sm-10" id="nameWithOwner" name="nameWithOwner">
                @{
                    foreach (var repository in Model.Repositories)
                    {
                        <option>@repository.NameWithOwner</option>
                    }
                }
            </select>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>

