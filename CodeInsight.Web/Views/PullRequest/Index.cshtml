@model CodeInsight.Web.Models.PullRequest.PullRequestIndexViewModel

<div class="container">
    <div class="row">
        <form asp-controller="PullRequest", asp-action="Index" method="post">
            <input name="fromIso8601" value="@Model.From.ToString()"/>
            <button type="submit">Submit</button>
        </form>
    </div>
    <div class="row">

        @foreach (var chart in Model.Charts)
        {
            <h2>@chart.Title</h2>
            <div class="card-columns cols-1">
                <div class="card">
                    <div class="card-body">
                        <canvas id="@chart.Id" width="800" height="800"></canvas>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        @foreach (var chart in Model.Charts)
        {
            @Html.Raw(chart.JsChart.CreateChartCode(chart.Id));
        }
    </script>
}
