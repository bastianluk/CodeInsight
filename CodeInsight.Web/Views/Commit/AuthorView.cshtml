@model CodeInsight.Web.Models.Commit.AuthorViewModel
@{
    ViewData["Title"] = "Per Author Analysis";
}

<div class="container" style="padding-top: 25px">
    <h2 class="display-4" style="margin-bottom: 25px">Authors (@Model.Authors.Count)</h2>
    <div class="row">
        <table class="table">
            <thead class="thead-light">
                <th>Author</th>
                <th>Last Contribution (dd/mm/yyyy)</th>
                <th>Additions</th>
                <th>Deletions</th>
                <th>Net</th>
                <th>Time On Project (days:hours:minutes)</th>
            </thead>
            <tbody>
                @foreach (var auth in Model.Authors.OrderByDescending(auth => auth.LastCommitAt))
                {
                    <tr>
                        <td>@auth.AuthorName</td>
                        <td>@auth.LastCommitAt.ToString("dd/MM/yyyy", null)</td>
                        <td>@auth.Additions</td>
                        <td>@auth.Deletions</td>
                        <td>@auth.CodeChangeDiff</td>
                        <td>@auth.TimeSpentOnProject.ToString("D:hh:mm", null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

