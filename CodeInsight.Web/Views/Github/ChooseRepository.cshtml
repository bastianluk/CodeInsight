@{
    Layout = "_AnonymousLayout";
}

@model CodeInsight.Web.Models.Github.ChooseRepositoryViewModel

<div class="container">
    <div class="row">
        <h2>Choose a repository</h2>
        
        @{
            if (Model.Error.NonEmpty)
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Error.Get()
                </div>
            }
        }
        
        <form asp-controller="Github" asp-action="ChooseRepository" method="post">
            @{
                foreach (var repository in Model.Repositories)
                {
                    <input type="radio" name="nameWithOwner" value="@repository.NameWithOwner">@repository.NameWithOwner<br>
                }
            }
            <button type="submit">Submit</button>
        </form>
        
    </div>
</div>

